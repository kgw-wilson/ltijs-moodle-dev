{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Necessary for resolving imports with @/
    "moduleResolution": "nodenext",
    "module": "NodeNext"
  },
  "include": [
    "./src/**/*"
  ],
  "references": [
    {
      "path": "../shared-models/tsconfig.json"
    },
    {
      "path": "../shared-constants/tsconfig.json"
    }
  ]
}